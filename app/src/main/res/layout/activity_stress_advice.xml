<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/peace1">

    <!-- Card container for advice -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Emoji icon -->
            <ImageView
                android:id="@+id/emojiIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_emotion_default"
                android:contentDescription="Emotion Icon"
                android:layout_marginBottom="16dp" />

            <!-- Main Title -->
            <TextView
                android:id="@+id/adviceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stress Detected"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#D32F2F"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp" />

            <!-- Main advice content -->
            <TextView
                android:id="@+id/adviceContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#333333" />

            <!-- Extra tips (optional) -->
            <TextView
                android:id="@+id/extraTips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>